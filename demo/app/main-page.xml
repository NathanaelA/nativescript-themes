    <Page.actionBar>
        <ActionBar title="NativeScript Themes Example"/>
    </Page.actionBar>

    <GridLayout rows="*,auto,*,auto">
        <Label row="0" text="Tap the button" class="title"/>
        <Button row="1" text="TAP" tap="{{ onTap }}" />
